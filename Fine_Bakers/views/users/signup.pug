.container
  .row
    .col-md-12.col-md-offset-4
      h2 Sign Up
      div#errors #{title}
      form#sign_form(action="/users/signup", name="sign_form", method="POST")
        .form-group
          label(for="fname") First name:
          input#fname.form-control(type="text", name="firstname", autofocus,required)
        .form-group
          label(for="lastname") Last Name:
          input#lname.form-control(type="text", name="lastname",required)
        .form-group
          label(for="email") Email:
          input#email.form-control(type="email",name="email",required)
        .form-group
          label(for="pwd") Password:
          input#pwd.form-control(type="password",name="password",required)
        input.btn.btn-primary(type="submit" value="Submit")
        br
        br
        p Already have an account? 
         a(href="/users/login") Log In
          br